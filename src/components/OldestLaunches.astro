---
import OldestCardLaunch from "../components/OldestCardLaunch.astro"

import { getOldestLaunches } from "../services/spacex"

const launches = await getOldestLaunches()
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {launches.map((launch) => (
        <OldestCardLaunch 
            id={launch.id}
            img={launch.links.patch.small}
            details={launch.details}
            flightNumber={launch.flight_number}
            success={launch.success}
        />
    ))}
</div>
